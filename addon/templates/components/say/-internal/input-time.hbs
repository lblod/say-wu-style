<div class="form__row">
  <div class="double-input js-double-input">
    <div class="double-input__inputs">
      <div class="double-input__input">
				<Say::Label>Uur</Say::Label>
				<Say::InputNumber
					@width="block"
					@type="number"
					@value={{this.hours}}
					@min="0"
					@max="23">
				</Say::InputNumber>
			</div>
      <div class="double-input__input">
				<Say::Label>Minuten</Say::Label>
				<Say::InputNumber
					@width="block"
					@type="number"
					@value={{this.minutes}}
					@min="0"
					@max="59">
				</Say::InputNumber>
			</div>
		</div>
	</div>
</div>
